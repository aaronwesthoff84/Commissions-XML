{
  "files.associations": {
    "*.bas": "vb",
    "*.cls": "vb",
    "*.frm": "vb"
  },
  "files.exclude": {
    "**/.DS_Store": true,
    "**/~$*": true
  },
  "search.exclude": {
    "**/*.xlsm": true,
    "**/*.xlsx": true
  },
  "editor.insertSpaces": true,
  "editor.tabSize": 4,
  "editor.detectIndentation": false,
  "[vb]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  "files.watcherExclude": {
    "**/*.xlsm": true,
    "**/*.xlsx": true
  }
}